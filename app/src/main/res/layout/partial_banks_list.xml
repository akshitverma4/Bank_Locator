<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:adjustViewBounds="true"
    android:background="@color/purple_500"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/bankName_tv"
        android:layout_toStartOf="@id/favouritesIcon"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bank_name"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bankAddress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bankName_tv"
        android:layout_marginTop="5dp"
        android:text="@string/bank_address"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/favouritesIcon"
        android:layout_width="35dp"
        android:contentDescription="@string/icon_iv"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_heart"
        android:textSize="20sp" />

</RelativeLayout>